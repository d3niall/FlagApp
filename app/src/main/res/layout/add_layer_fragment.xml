<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:columnCount="4">

        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_pale"
                android:id="@+id/pattern_pale"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_fess"
                android:id="@+id/pattern_fess"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_pall"
                android:id="@+id/pattern_pall"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_cross"
                android:id="@+id/pattern_cross"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_saltire"
                android:id="@+id/pattern_saltire"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_greekcross"
                android:id="@+id/pattern_greekcross"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_quadrisection"
                android:id="@+id/pattern_quadrisection"
        />
        <ImageView
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:layout_width="@dimen/new_layer_pattern_width"
                android:layout_height="@dimen/new_layer_pattern_height"
                app:srcCompat="@drawable/pattern_border"
                android:id="@+id/pattern_border"
        />
    </GridLayout>

</FrameLayout>